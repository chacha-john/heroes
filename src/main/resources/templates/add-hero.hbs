{{#partial "content"}}
    <form action="/hero/add" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
            <label for="superpower">Superpower</label>
            <input class="form-control" id="superpower" name="superpower" placeholder="Superpower" required>
        </div>
        <div class="form-group">
            <label for="power">Weakness</label>
            <input type="text" class="form-control" id="weakness" name="weakness" placeholder="Weakness" required>
        </div>
        <div class="form-group">
            <label for="powerLevel">Age</label>
            <input type="number" class="form-control" id="age" name="age" placeholder="Age" required min="1">
        </div>
        <button type="submit" class="btn inverted-color mt-2">Submit</button>
    </form>
{{/partial}}
{{> layout.hbs}}
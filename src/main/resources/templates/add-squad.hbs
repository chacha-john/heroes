{{#partial "content"}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Add a squad</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form action="/squad/add" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="maxsize">Maximum number of heroes for the squad</label>
                    <input class="form-control" id="maxsize" name="maxsize" placeholder="8" required min="1">
                </div>
                <div class="form-group">
                    <label for="image">Cause</label>
                    <input type="text" class="form-control" id="cause" name="cause" placeholder="cause" required>
                </div>
                <button type="submit" class="btn inverted-color mt-2">Submit</button>
            </form>
        </div>
    </div>
</div>
{{/partial}}
{{> layout.hbs}}